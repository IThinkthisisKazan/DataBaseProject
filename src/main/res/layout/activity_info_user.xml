<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infoUser">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="80dp"
        android:id="@+id/info_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/info_username"
        android:layout_marginBottom="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/info_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/info_status"
        android:layout_marginBottom="80dp"
        android:background="@color/mainBackground"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/info_username"
        app:layout_constraintTop_toBottomOf="@+id/info_username" />
</androidx.constraintlayout.widget.ConstraintLayout>